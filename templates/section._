<!DOCTYPE html>
<html>
    <head>
    <title>ยง <%=section.heading.identifier + ' ' + section.heading.catch_text%></title>
        <meta http-equiv='content-type' content='text/html; charset=utf-8' />
    </head>
    <body>
        <h1>ยง <%=section.heading.identifier + ' ' + section.heading.catch_text%></h1>
        <% if (section.text) { %>
            <% section.text.split(/\n+/).forEach(function(s) { %>
                <p><%= cited(s) %></p>
            <% }); %>
        <% } %>

        <% if (section.sections.length) { %>
        <dl>
            <% section.sections.forEach(function(s) { %>
                <dt><%= s.prefix %></dt>
                <dd><%= cited(s.text) %></dd>
            <% }); %>
        </dl>
        <% } %>

        <% if (section.historical) { %>
        <h3>Historical and Statutory</h3>
        <p><%= cited(section.historical) %></p>
        <% } %>

        <% if (section.credits) { %>
        <h3>Credits</h3>
        <p><%= cited(section.credits) %></p>
        <% } %>
    </body>
</html>
